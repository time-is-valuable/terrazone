{
  "name": "@terrazone/ui",
  "version": "0.0.0",
  "private": true,
  "exports": {
    ".": "./src/index.tsx",
    "./styles.css": "./dist/index.css"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "dev": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component"
  },
  "devDependencies": {
    "@terrazone/eslint-config": "workspace:*",
    "@terrazone/tailwind-config": "workspace:*",
    "@terrazone/typescript-config": "workspace:*",
    "@terrazone/utils": "workspace:*",
    "@types/eslint": "^8.56.5",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "autoprefixer": "^10.4.19",
    "postcss": "^8",
    "react": "^18.2.0",
    "tailwindcss": "^3.4.1"
  }
}
